<% layout("/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h1><b>Login to Wanderlust</b></h1>
        <form action="/login" method="POST" class="needs-validation mt-4" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" id="username" placeholder="enter username" type="text" class="form-control" required>
                <div class="valid-feedback"> Looks good!</div>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required>
                <div class="valid-feedback"> Looks good!</div>
            </div>
            <button class="btn btn-outline-success">Login</button>


        </form>

    </div>
</div>